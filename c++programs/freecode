//to print the number from 10 to 0
   int x=10;
   while(x>=0)
   {cout<<x;
    --x;}
   //
  int x=10;
  for(int x=10;x>=0;--x)
      cout<<x;
  //
//
//summing from upper to lower limit
  int v1,v2;
  cin>>v1>>v2;
  int lower,upper;
  if(v1<=v2){lower=v1;upper=v2;}
  else{lower=v2;upper=v2;}
  int sum=0;
  for(int val=lower;val<=upper;++val)
    sum+=val;
  cout <<"sum : "<<sum<<"\n";
