//cascading example
 float num1,num2,sum,avg;
 cout<<"Enter Two Numbers: ";//prompt
 cin>>num1>>num2;//read//cascading
 sum=num1+num2;
 avg=sum/2;
 cout<<"Sum ="<<sum<<"\n"
     <<"Avg is"<<avg<<"\n";//this technique is known as cascading
//
//using scanf
   char str [80];
  int i;

  printf ("Enter your family name: ");
  scanf ("%79s",str);
  printf ("Enter your age: ");
  scanf ("%d",&i);
  printf ("Mr. %s , %d years old.\n",str,i);
  printf ("Enter a hexadecimal number: ");
  scanf ("%x",&i);
  printf ("You have entered %#x (%d).\n",i,i);
