#include<iostream>
#include<iomanip>

using namespace std;
int main()
{
 float x=2.21321;
 cout<<x<<endl;
 cout<<setw(5)<<x<<endl;//123/10 is then printed
 //cout<<getw(5)<<x<<endl;//this doesn't work
 //cout<<setp(7)<<x<<endl;//this doesn't work
 //cout<<x<<setprecision(3)<<endl;//this doesn't work
 cout<<setprecision(3)<<x<<endl;

 return 0;
}

