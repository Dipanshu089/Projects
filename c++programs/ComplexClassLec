//complex no s
class complex
{
 public:
  int real;
  int imag;
  void input()
  {
   cout<<"Enter value of real:";
   cin>>real;
   cout<<"Enter value of Imag:";
   cin>>imag;
  }
  void modulu()
  {
   float mod=pow(real*real+imag*imag,0.5);
   cout<<mod<<endl;
  }
  void display()
  {
   cout<<real<<"+i"<<imag<<endl;
  }
  void setdata(int r,int i)
  {
   real=r;
   imag=i;

  }
 private:
 protected:

};
int main()
{

 complex c1,c2,c3;
 c1.real;//
 c1.imag;
 c1.input();
 c1.display();
 c1.modulu();
 int a;
 a=20;
 c1.setdata(3,4);
 c1.display();
 c1.modulu();
 return 0;
}

